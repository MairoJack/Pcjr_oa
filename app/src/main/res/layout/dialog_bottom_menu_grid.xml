<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="12dip"
    android:paddingLeft="12dip"
    android:paddingRight="12dip"
    android:paddingTop="12dip">

    <LinearLayout
        android:id="@+id/lay_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_selection_selector_singleton"
        android:layout_marginBottom="8dip"
        android:padding="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多操作"
            android:textColor="@color/color_explain"
            android:textSize="14dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:columnCount="4"
            android:layout_gravity="fill_horizontal"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal">
                <ImageView
                    android:id="@+id/btn_copy"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/icon_copy"
                    android:scaleType="centerInside"
                    android:background="@drawable/dialog_selection_selector_grid"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="复制"
                    android:textColor="@color/color_explain"
                    android:textSize="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal">
                <ImageView
                    android:id="@+id/btn_delete"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/icon_delete"
                    android:scaleType="centerInside"
                    android:background="@drawable/dialog_selection_selector_grid"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="删除"
                    android:textColor="@color/color_explain"
                    android:textSize="12dp"/>
            </LinearLayout>
        </GridLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_selection_selector_singleton"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="取消"
        android:gravity="center"
        android:textColor="#0076ff"
        android:textSize="17dp" />

</LinearLayout>