<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_background"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.1dp"
        android:padding="10dp"
        android:background="@color/color_content_background">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_department"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon"
            android:layout_marginLeft="15dp"
            android:text="部门"
            android:textColor="@color/color_title"
            android:textSize="@dimen/text_size_key"/>

        <TextView
            android:id="@+id/txt_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_content"
            android:textSize="@dimen/text_size_value"
            tools:text="啦啦啦部门"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.1dp"
        android:padding="10dp"
        android:background="@color/color_content_background">

        <ImageView
            android:id="@id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_job"/>

        <TextView
            android:id="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon"
            android:layout_marginLeft="15dp"
            android:text="职位"
            android:textColor="@color/color_title"
            android:textSize="@dimen/text_size_key"/>

        <TextView
            android:id="@+id/txt_job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_content"
            android:textSize="@dimen/text_size_value"
            tools:text="啦啦啦部门"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.1dp"
        android:padding="10dp"
        android:background="@color/color_content_background">

        <ImageView
            android:id="@id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_status"/>

        <TextView
            android:id="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon"
            android:layout_marginLeft="15dp"
            android:text="状态"
            android:textColor="@color/color_title"
            android:textSize="@dimen/text_size_key"/>

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_content"
            android:textSize="@dimen/text_size_value"
            tools:text="啦啦啦部门"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.1dp"
        android:padding="10dp"
        android:background="@color/color_content_background">

        <ImageView
            android:id="@id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_telephone"/>

        <TextView
            android:id="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon"
            android:layout_marginLeft="15dp"
            android:text="固话"
            android:textColor="@color/color_title"
            android:textSize="@dimen/text_size_key"/>

        <TextView
            android:id="@+id/txt_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_content"
            android:textSize="@dimen/text_size_value"
            tools:text="啦啦啦部门"/>
        <ImageView
            android:id="@+id/btn_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_mobile"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.1dp"
        android:padding="10dp"
        android:background="@color/color_content_background">

        <ImageView
            android:id="@id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_email"/>

        <TextView
            android:id="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon"
            android:layout_marginLeft="15dp"
            android:text="邮箱"
            android:textColor="@color/color_title"
            android:textSize="@dimen/text_size_key"/>

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_content"
            android:textSize="@dimen/text_size_value"
            tools:text="qqqe@qq.com"/>
    </RelativeLayout>
</LinearLayout>