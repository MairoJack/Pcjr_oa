<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_platform_notice"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/select_corner_white"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/txt_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/avatar_background_blue_48"
        android:gravity="center_horizontal|center_vertical"
        android:text="拉拉"
        android:textColor="@color/color_white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/txt_avatar"
        android:text="平台公告"
        android:textColor="@color/color_explain"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/txt_time"
        android:layout_toRightOf="@+id/txt_avatar"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="可设置或修改头像及您相关的可设置或修改头像及您相关的基本信息可设置或修改头像及您相关的基本信息可设置或修改头像及您相关的基本信息基本信息"
        android:textColor="@color/color_content"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:text="7-24"
        android:textColor="@color/color_content"
        android:textSize="11dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"
        android:background="#efefef" />
</RelativeLayout>
