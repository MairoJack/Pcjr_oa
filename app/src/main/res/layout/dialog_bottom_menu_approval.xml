<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="12dip"
    android:paddingLeft="12dip"
    android:paddingRight="12dip"
    android:paddingTop="12dip">

    <LinearLayout
        android:id="@+id/lay_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:background="@drawable/dialog_selection_selector_singleton"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多操作"
            android:textColor="@color/color_explain"
            android:textSize="14dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="10dp"
            android:columnCount="5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_flow"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/dialog_selection_selector_grid"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_flow_dark_48" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="流程"
                    android:textColor="@color/color_explain"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_log"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/dialog_selection_selector_grid"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_log_dark_48" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="操作日志"
                    android:textColor="@color/color_explain"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_query_record"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/dialog_selection_selector_grid"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_query_record_dark_48" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="查询记录"
                    android:textColor="@color/color_explain"
                    android:textSize="12dp" />
            </LinearLayout>

        </GridLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_selection_selector_singleton"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="取消"
        android:textColor="#0076ff"
        android:textSize="17dp" />

</LinearLayout>