        <RelativeLayout
            android:id="@+id/rl_union_form"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="0.1dp"
            android:background="@drawable/select_white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="关联表单"
                android:textColor="@color/color_title"
                android:textSize="@dimen/text_size_key" />

            <TextView
                android:id="@+id/txt_union_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/btn_right"
                android:text="请选择"
                android:textColor="@color/color_explain"
                android:textSize="@dimen/text_size_value" />

            <ImageView
                android:id="@id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_right" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_close"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="0.1dp"
        android:layout_marginTop="0.1dp"
        android:background="@drawable/select_white"
        android:gravity="center_horizontal|center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收起"
            android:textColor="#3a9af8"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/icon_up_up" />

    </LinearLayout>

</LinearLayout>